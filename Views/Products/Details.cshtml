@model ECommerceApplication.Models.Product

<div class="container">
    <div class="row justify-content-center">
        <!-- Product Image and Information -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
                <div class="card-body">
                    <h2 class="card-title text-center">@Model.Name</h2>
                    <p class="card-text text-center">@Model.Description</p>
                    <h4 class="text-center">Price: @Model.Price.ToString("C")</h4>
                </div>
            </div>
        </div>

        <!-- Add to Cart Section -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-center">Add to Cart</h4>
                    <div class="d-flex justify-content-center">
                        <a href="@Url.Action("AddToCart", "Cart", new { productId = Model.Id })" class="btn btn-success btn-lg">
                            Add to Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
